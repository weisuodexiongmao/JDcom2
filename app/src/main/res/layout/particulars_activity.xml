<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bwe.com.bawei.jdcom.particulars.Particulars_activity">
<com.youth.banner.Banner
    android:id="@+id/particulars_banner"
    android:layout_width="match_parent"
    android:layout_height="220dp"></com.youth.banner.Banner>

    <TextView
        android:id="@+id/particulars_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/particulars_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textColor="#ed0d0d"
        android:layout_below="@+id/particulars_textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/particulars_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/particulars_textView2"
        android:layout_marginTop="47dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/particulars_textView4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#fb6f04"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="#fff" />
</RelativeLayout>
